[alias]
    co = "!~/bin/git-co.sh"
[push]
    default = simple
    autoSetupRemote = true
[fetch]
    prune = true
    pruneTags = true
    all = true
[core]
	editor = nvim
[pull]
	rebase = true
[branch]
	autosetuprebase = always
	sort = committerdate
[column]
    ui = auto
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[help]
    autocorrect = prompt
[commit]
    verbose = true
[rerere]
    enabled = true
    autoupdate = true
[core]
    excludesfile = ~/.gitignore
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
    rebase = true
